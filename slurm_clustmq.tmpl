#!/bin/sh
#SBATCH --job-name={{ job_name }}
#SBATCH --partition=cpu
#SBATCH --output={{ log_file | /dev/null }} # you can add .%a for array index
#SBATCH --error={{ log_file | /dev/null }}
#SBATCH --mem-per-cpu={{ memory | 64000 }}
#SBATCH --array=1-{{ n_jobs }}
#SBATCH --cpus-per-task={{ cores | 1 }}

module load netcdf-c

ulimit -v $(( 1024 * {{ memory | 64000 }} ))
CMQ_AUTH={{ auth }} R --no-save --no-restore -e 'clustermq:::worker("{{ master }}")'

## note that memory needs to be 64gb to run some of these WTD extractions... Some of these need a tonnnnnn of memory because of some super high-res vector geometry
